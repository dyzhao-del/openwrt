# ====== 友华K1200JS正确配置 ======
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y

# ⭐ 使用官方设备标识 ⭐
CONFIG_TARGET_ramips_mt7621_DEVICE_youhua_wr1200js=y

# 固件大小（根据官方：16MB闪存，留出足够空间）
CONFIG_TARGET_ROOTFS_PARTSIZE=128
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_TARGZ=y

# ====== 友华K1200JS专用驱动 ======
# 根据官方源码，确认需要的驱动
CONFIG_PACKAGE_kmod-mt7603=y          # 2.4G无线 (MT7603EN)
CONFIG_PACKAGE_kmod-mt7615e=y         # 5G无线 (MT7612EN)
CONFIG_PACKAGE_wpad-openssl=y
CONFIG_PACKAGE_hostapd-common=y
CONFIG_PACKAGE_hostapd-utils=y

# 以太网驱动（MT7621内置）
CONFIG_PACKAGE_kmod-mt7621=y
CONFIG_PACKAGE_kmod-mtk_sgmii=y

# ====== 基础系统 ======
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_lsof=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y

# 网络
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dnsmasq_full_ipv6=y

# 存储（有USB接口）
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-ntfs=y
CONFIG_PACKAGE_kmod-nls-utf8=y
CONFIG_PACKAGE_kmod-nls-cp437=y

# ====== LUCI界面 ======
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-theme-argon=y

# ====== V2ray插件 ======
CONFIG_PACKAGE_v2ray-core=y
CONFIG_PACKAGE_v2ray-plugin=y
CONFIG_PACKAGE_luci-app-v2ray-server=y
CONFIG_PACKAGE_luci-i18n-v2ray-server-zh-cn=y

# ====== 其他实用插件 ======
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-app-filetransfer=y

# ====== 禁用有问题的包 ======
# CONFIG_PACKAGE_libselinux is not set
# CONFIG_PACKAGE_selinux-policy is not set
